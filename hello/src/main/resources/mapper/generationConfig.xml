<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<generatorConfiguration>
    <classPathEntry location="C:\Users\dell\Downloads\mysql-connector-java-8.0.16.jar" />
    <context id="context1" targetRuntime="MyBatis3">

        <commentGenerator>
            <!-- 去除自动生成的注释 -->
            <property name="suppressAllComments" value="true" />
        </commentGenerator>

        <!-- 数据库连接配置 -->

        <jdbcConnection driverClass="com.mysql.jdbc.Driver"
                        connectionURL="jdbc:mysql://localhost:3306/qingsongdai?serverTimezone=UTC"
                        userId="root"
                        password="123456" />

        <!-- 非必需，类型处理器，在数据库类型和java类型之间的转换控制-->
        <javaTypeResolver>
            <property name="forceBigDecimals" value="false"/>
        </javaTypeResolver>

        <!--配置生成的实体包
            targetPackage：生成的实体包位置，默认存放在src目录下
            targetProject：目标工程名
         -->
        <javaModelGenerator targetPackage="loan.easyLoan.entity"
                            targetProject="src/main/java" />

        <!-- 实体包对应映射文件位置及名称，默认存放在src目录下 -->
        <sqlMapGenerator targetPackage="mapper"
                         targetProject="src/main/resources" />

        <!-- targetPackage：mapper接口生成的位置 -->
        <javaClientGenerator targetPackage="loan.easyLoan.mapper"
                             targetProject="src/main/java"  type="XMLMAPPER"/>

        <table tableName="borrow_money_flow"/>
        <table tableName="borrower_account"/>
        <table tableName="configuration"/>
        <table tableName="depository"/>
        <table tableName="intend_borrow"/>
        <table tableName="intend_lend"/>
        <table tableName="lender_account"/>
        <table tableName="recharge_record"/>
        <table tableName="repay_money_flow"/>
        <table tableName="trade"/>
        <table tableName="user_optional_info"/>
        <table tableName="user_required_info"/>
        <table tableName="withdraw_record"/>

    </context>
</generatorConfiguration>


